{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "build",
    "rootDir": "servers",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["servers/**/*"]
}
